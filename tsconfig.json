{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "useDefineForClassFields": true, // switch to the upcoming ECMA runtime behavior of class fields.
        "module": "es6",
        "resolveJsonModule": true, // allow importing of json modules
        /**
       * Typecheck JS in `.svelte` and `.js` files by default.
       * Disable checkJs if you'd like to use dynamic types in JS.
       * Note that setting allowJs false does not prevent the use
       * of JS in `.svelte` files.
       */
        "allowJs": true,
        "checkJs": true,
        // tells TypeScript to warn you if you write certain code that
        // canâ€™t be correctly interpreted by a single-file transpilation process.
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        // "skipLibCheck": true,
        "types": [
            "svelte"
        ]
    },
    "include": [
        // "src/**/*.d.ts",
        "src/**/*.ts",
        // "src/**/*.js",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules/**",
        "app/static/**"
    ]
}
